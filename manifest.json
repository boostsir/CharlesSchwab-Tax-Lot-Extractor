{
  "manifest_version": 3,
  "name": "Charles Schwab Tax Lot Extractor",
  "version": "1.0.0",
  "description": "âš¡ Automate Schwab tax lot extraction. Export cost basis, gain/loss, and holding period data for all investments in CSV or JSON",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["*://client.schwab.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://client.schwab.com/app/accounts/positions/*"],
      "js": [
        "lib/utils.js",
        "lib/extractor.js",
        "lib/storage.js",
        "lib/exporter.js",
        "content.js"
      ],
      "css": ["content.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
